@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject SignInManager<BookHive.Models.ApplicationUser> SignInManager
@inject UserManager<BookHive.Models.ApplicationUser> UserManager
@inject BookHive.Data.ApplicationDbContext _context

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BookNook</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">

    <style>
        html {
            font-family: 'Inter', sans-serif;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Merriweather', serif;
        }
    </style>
</head>
<body class="flex flex-col min-h-screen bg-gray-50 text-slate-800 antialiased">

    <!-- NAVBAR -->
    <nav class="bg-[#4b2e83] text-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">

                <!-- Logo & Links -->
                <div class="flex items-center space-x-8">
                    <a asp-controller="Home" asp-action="Index" class="text-2xl font-bold tracking-wide hover:text-[#fbbf24]">BookNook</a>
                    <a asp-controller="Books" asp-action="Index" class="hover:text-[#fbbf24] transition">Books</a>
                    <a asp-controller="Announcements" asp-action="Index" class="hover:text-[#fbbf24] transition">Announcements</a>
                </div>

                <!-- Search -->
                <div class="flex-1 px-4">
                    <form asp-controller="Books" asp-action="Index" method="get" class="w-full max-w-lg mx-auto">
                        <label class="relative block">
                            <input name="search" type="text" placeholder="Search books..." class="w-full rounded-full py-2 pl-4 pr-10 placeholder-slate-400 focus:ring-2 focus:ring-[#fbbf24] focus:outline-none" />
                            <button type="submit" class="absolute inset-y-0 right-0 flex items-center pr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-75" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </button>
                        </label>
                    </form>
                </div>

                <!-- User Section -->
                <div class="flex items-center space-x-6">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        int cartCount = await _context.Carts.Where(c => c.UserId == user.Id).Select(c => c.BookId).Distinct().CountAsync();
                        int orderCount = await _context.Orders.Where(o => o.UserId == user.Id && !o.IsCancelled && o.Status != "Received").CountAsync();

                        <!-- Cart -->
                        <a asp-controller="Cart" asp-action="Cart" class="relative hover:text-[#fbbf24] transition">
                            <span class="text-xl">🛒</span>
                            <span class="absolute -top-1 -right-2 bg-red-600 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">@cartCount</span>
                        </a>

                        <!-- Orders -->
                        <a asp-controller="Orders" asp-action="MyOrders" class="relative hover:text-[#fbbf24] transition">
                            <span>Orders</span>
                            <span class="absolute -top-1 -right-2 bg-red-600 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">@orderCount</span>
                        </a>

                        <!-- Profile -->
                        <div class="relative">
                            <button id="profileDropdown" class="flex items-center space-x-2 hover:text-[#fbbf24] focus:outline-none">
                                <span>@($"Hi, {user.FirstName}")</span>
                                @if (!string.IsNullOrEmpty(user.ProfileImageUrl))
                                {
                                    <img src="@user.ProfileImageUrl" alt="Profile" class="w-8 h-8 rounded-full border border-white" />
                                }
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>
                            <div id="profileMenu" class="hidden absolute right-0 mt-2 w-44 bg-white text-slate-800 rounded-md shadow-lg py-1 z-20">
                                <a asp-controller="Profile" asp-action="ViewProfile" class="block px-4 py-2 hover:bg-slate-100">View Profile</a>
                                <a asp-controller="Profile" asp-action="Edit" class="block px-4 py-2 hover:bg-slate-100">Edit Profile</a>
                                <a asp-controller="Profile" asp-action="ChangePassword" class="block px-4 py-2 hover:bg-slate-100">Change Password</a>
                                <a asp-controller="Account" asp-action="Logout" class="block px-4 py-2 hover:bg-slate-100">Logout</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="hover:text-[#fbbf24] transition">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="hover:text-[#fbbf24] transition">Register</a>
                    }
                </div>

            </div>
        </div>
    </nav>

    <!-- Page -->
    <main class="flex-grow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-[#4b2e83] text-gray-200">
        <div class="max-w-7xl mx-auto px-4 py-6 text-center text-sm">© 2025 BookNook — Your trusted online bookstore.</div>
    </footer>

    @Html.AntiForgeryToken()
    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('profileDropdown');
            const menu = document.getElementById('profileMenu');
            if (btn && menu) {
                btn.addEventListener('click', e => {
                    e.stopPropagation();
                    menu.classList.toggle('hidden');
                });
                document.addEventListener('click', () => menu.classList.add('hidden'));
            }
        });
    </script>
</body>
</html>