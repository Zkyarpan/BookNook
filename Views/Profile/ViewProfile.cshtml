@model BookNook.Models.ProfileViewModel
@{
    ViewData["Title"] = "View Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex items-center justify-center min-h-[calc(100vh-160px)] bg-gradient-to-br from-[#4b2e83]/10 via-[#fbbf24]/10 to-white py-8 px-4">
    <div class="bg-white/90 backdrop-blur-lg border border-gray-200 rounded-2xl shadow-lg p-8 max-w-xl w-full">

        <h2 class="text-3xl font-merriweather text-[#4b2e83] text-center mb-6">Your Profile</h2>

        @* flash messages *@
        @if (TempData["SuccessMessage"] is string msg)
        {
            <div class="bg-green-100 text-green-800 p-3 rounded mb-4 text-center font-medium">
                @msg
            </div>
        }
        @if (TempData["ResetLink"] is string link)
        {
            <div class="bg-blue-100 text-blue-800 p-3 rounded mb-4 text-center text-sm">
                Password reset link: <a href="@link" class="underline hover:text-blue-600">Click here</a>
            </div>
        }

        <div class="text-center mb-6">
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl"
                     alt="Profile"
                     class="w-32 h-32 object-cover rounded-full mx-auto border-2 border-[#4b2e83]" />
            }
            else
            {
                <div class="w-32 h-32 bg-gray-200 flex items-center justify-center rounded-full mx-auto text-gray-500">
                    No Image
                </div>
            }
        </div>

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4 text-gray-700 text-sm">
            <div>
                <dt class="font-medium">Username</dt>
                <dd class="mt-1">@Model.UserName</dd>
            </div>
            <div>
                <dt class="font-medium">Email</dt>
                <dd class="mt-1">@Model.Email</dd>
            </div>
            <div>
                <dt class="font-medium">First Name</dt>
                <dd class="mt-1">@(Model.FirstName ?? "Not set")</dd>
            </div>
            <div>
                <dt class="font-medium">Last Name</dt>
                <dd class="mt-1">@(Model.LastName ?? "Not set")</dd>
            </div>
        </dl>

        <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
            <a asp-action="Edit"
               class="flex-1 bg-amber-600 hover:bg-amber-700 text-white font-semibold py-2 px-4 rounded-lg text-center transition">
                Edit Profile
            </a>
            <a asp-action="ChangePassword"
               class="flex-1 bg-amber-600 hover:bg-amber-700 text-white font-semibold py-2 px-4 rounded-lg text-center transition">
                Change Password
            </a>
        </div>
    </div>
</div>
