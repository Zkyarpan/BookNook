@model BookNook.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex items-center justify-center min-h-[calc(100vh-160px)] bg-gradient-to-br from-[#4b2e83]/10 via-[#fbbf24]/10 to-white py-8 px-4">
    <div class="bg-white/90 backdrop-blur-lg border border-gray-200 rounded-2xl shadow-lg p-8 max-w-md w-full">

        <h2 class="text-3xl font-merriweather text-[#4b2e83] text-center mb-6">
            Change Password
        </h2>

        <form asp-action="ChangePassword" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            @* Validation summary *@
            <div asp-validation-summary="All" class="text-red-600 text-sm text-center"></div>

            <div>
                <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-1">
                    Email
                </label>
                <input asp-for="Email"
                       class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500"
                       placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
                <p class="text-gray-500 text-xs mt-1">
                    A reset link will be sent to this email.
                </p>
            </div>

            <div class="flex justify-end gap-3">
                <a asp-controller="Profile" asp-action="ViewProfile"
                   class="flex-1 sm:flex-none bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg text-center transition">
                    Cancel
                </a>
                <button type="submit"
                        class="flex-1 sm:flex-none bg-amber-600 hover:bg-amber-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                    Send Reset Link
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
