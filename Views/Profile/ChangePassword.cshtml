@model BookHive.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold text-amber-900 mb-6 text-center">Change Password</h2>

    <div class="bg-amber-50 rounded-lg shadow-md p-6 max-w-lg mx-auto">
        <form asp-action="ChangePassword" method="post" class="space-y-6">
            <div>
                <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" required />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                <p class="text-sm text-gray-600 mt-1">A password reset link will be sent to this email.</p>
            </div>
            <div class="flex justify-end gap-3">
                <a asp-action="ViewProfile" class="inline-block bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-600">Cancel</a>
                <button type="submit" class="inline-block bg-amber-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-amber-700">Send Reset Link</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}