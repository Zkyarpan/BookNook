@model BookHive.Models.ApplicationUser
@{
    ViewData["Title"] = "View User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- wrapper ------------------------------------------------------------->
<div class="max-w-4xl mx-auto px-4 py-12">

    <h1 class="text-2xl font-merriweather text-[#4b2e83] text-center mb-8">
        User Profile: @Model.UserName
    </h1>

    <!-- card ------------------------------------------------------------>
    <div class="bg-white/90 backdrop-blur border border-slate-200 rounded-2xl shadow-lg p-8 max-w-lg mx-auto">

        <!-- avatar -->
        <div class="text-center mb-6">
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl" alt="@Model.UserName"
                     class="w-32 h-32 object-cover rounded-full mx-auto">
            }
            else
            {
                <div class="w-32 h-32 bg-slate-200 flex items-center justify-center rounded-full mx-auto text-xs text-slate-600">
                    No Image
                </div>
            }
        </div>

        <!-- details -->
        <dl class="grid grid-cols-1 gap-4 text-sm">
            <dt class="font-semibold text-slate-700">Username</dt>
            <dd class="text-slate-600">@Model.UserName</dd>

            <dt class="font-semibold text-slate-700">Email</dt>
            <dd class="text-slate-600">@Model.Email</dd>

            <dt class="font-semibold text-slate-700">First Name</dt>
            <dd class="text-slate-600">@(Model.FirstName ?? "Not set")</dd>

            <dt class="font-semibold text-slate-700">Last Name</dt>
            <dd class="text-slate-600">@(Model.LastName ?? "Not set")</dd>

            <dt class="font-semibold text-slate-700">Roles</dt>
            <dd class="text-slate-600">@(string.Join(", ", ViewBag.Roles))</dd>
        </dl>

        <!-- back button -->
        <div class="mt-8 text-center">
            <a asp-action="Index"
               class="bg-slate-500 hover:bg-slate-600 text-white text-sm font-semibold py-2 px-6 rounded-lg shadow">
                ← Back to Dashboard
            </a>
        </div>
    </div>
</div>
