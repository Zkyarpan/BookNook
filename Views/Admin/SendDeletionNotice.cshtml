@model BookNook.Models.DeletionNoticeViewModel
@{
    ViewData["Title"] = "Send Deletion Notice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4">
    <div class="bg-white/90 backdrop-blur border border-gray-200 rounded-2xl shadow-lg max-w-md w-full p-8">
        <h1 class="text-3xl font-merriweather text-[#4b2e83] text-center mb-6">
            Send Deletion Notice
        </h1>

        <form asp-action="SendDeletionNotice" method="post" class="space-y-6">
            <input type="hidden" asp-for="UserId" />

            <div asp-validation-summary="All" class="text-red-600 text-sm text-center"></div>

            <div>
                <label asp-for="Message" class="block text-sm font-medium text-gray-700 mb-2">
                    Reason for Deletion
                </label>
                <textarea asp-for="Message"
                          rows="5"
                          required
                          class="w-full rounded-lg border border-gray-300 p-3 focus:outline-none focus:ring-2 focus:ring-[#fbbf24] transition"
                          placeholder="Explain why this user is being considered for deletion…"></textarea>
                <span asp-validation-for="Message" class="text-red-600 text-xs"></span>
            </div>

            <div class="flex gap-4">
                <button type="submit"
                        class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 rounded-lg shadow transition">
                    Send Notice
                </button>
                <a asp-action="Index"
                   class="flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 rounded-lg shadow transition">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
