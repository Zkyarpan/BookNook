@model BookHive.Models.DeletionNoticeViewModel
@{
    ViewData["Title"] = "Send Deletion Notice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Wrapper -------------------------------------------------------------->
<div class="flex items-center justify-center min-h-[calc(100vh-200px)] bg-gradient-to-br from-[#4b2e83]/10 via-[#fbbf24]/10 to-white px-4">

    <!-- Card -------------------------------------------------------------->
    <div class="bg-white/90 backdrop-blur border border-slate-200 rounded-2xl shadow-lg p-8 max-w-md w-full">

        <h1 class="text-2xl font-merriweather text-[#4b2e83] text-center mb-6">
            Send Deletion Notice
        </h1>

        <form asp-action="SendDeletionNotice" method="post" class="space-y-6">
            <div asp-validation-summary="All" class="text-rose-600 text-sm text-center"></div>

            <input type="hidden" asp-for="UserId" />

            <!-- reason --------------------------------------------------- -->
            <div>
                <label asp-for="Message" class="block text-sm font-medium text-slate-700 mb-1">
                    Reason for Deletion
                </label>
                <textarea asp-for="Message" rows="5" required
                          class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24]"
                          placeholder="Explain why this user is being considered for deletion…"></textarea>
                <span asp-validation-for="Message" class="text-rose-600 text-xs"></span>
            </div>

            <!-- buttons -------------------------------------------------- -->
            <div class="flex gap-2">
                <button type="submit"
                        class="w-full bg-red-600 hover:bg-red-700 text-white text-sm font-semibold py-2.5 rounded-lg shadow">
                    Send Notice
                </button>
                <a asp-action="Index"
                   class="w-full bg-slate-500 hover:bg-slate-600 text-white text-sm font-semibold py-2.5 rounded-lg shadow text-center">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
