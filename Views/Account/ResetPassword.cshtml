@model BookNook.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-12">

    <h1 class="text-2xl font-merriweather text-[#4b2e83] text-center mb-8">
        Reset Password
    </h1>

    <div class="bg-white/90 backdrop-blur border border-slate-200 rounded-2xl shadow-lg p-8 max-w-lg mx-auto">

        <form asp-action="ResetPassword" method="post" class="space-y-6">

            <input type="hidden" asp-for="Token" />

            <!-- Email ------------------------------------------------------>
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-slate-700 mb-1">Email</label>
                <input asp-for="Email"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24]" required />
                <span asp-validation-for="Email" class="text-rose-600 text-sm"></span>
            </div>

            <!-- Password --------------------------------------------------->
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-slate-700 mb-1">New Password</label>
                <input asp-for="Password" type="password"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24]" required />
                <span asp-validation-for="Password" class="text-rose-600 text-sm"></span>
            </div>

            <!-- Confirm ---------------------------------------------------->
            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-slate-700 mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24]" required />
                <span asp-validation-for="ConfirmPassword" class="text-rose-600 text-sm"></span>
            </div>

            <!-- Buttons ---------------------------------------------------->
            <div class="flex justify-end gap-3">
                <a href="/Account/Login"
                   class="bg-slate-500 hover:bg-slate-600 text-white text-sm font-semibold py-2 px-4 rounded-lg shadow">
                    Cancel
                </a>
                <button type="submit"
                        class="bg-[#4b2e83] hover:bg-[#3c226a] text-white text-sm font-semibold py-2 px-4 rounded-lg shadow">
                    Reset Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
