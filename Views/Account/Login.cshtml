@model BookHive.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex items-center justify-center min-h-[calc(100vh-200px)]">
    <div class="bg-amber-50 rounded-lg shadow-lg p-8 max-w-md w-full">
        <h2 class="text-2xl font-bold text-amber-900 mb-6 text-center">Login to BookHive</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-red-600 mb-4 text-center"></div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="block text-gray-700 mb-2"></label>
                <input asp-for="Email" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="block text-gray-700 mb-2"></label>
                <input asp-for="Password" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="form-group mb-4 flex items-center">
                <input asp-for="RememberMe" class="h-4 w-4 text-amber-600 focus:ring-amber-500 border-gray-300 rounded" />
                <label asp-for="RememberMe" class="ml-2 text-gray-700"></label>
            </div>

            <button type="submit" class="w-full bg-amber-600 text-white font-semibold py-3 rounded-lg hover:bg-amber-700 transition duration-300">Login</button>

            <div class="mt-4 text-center">
                <a href="/Account/Register" class="text-amber-600 hover:underline">Don't have an account? Register here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}