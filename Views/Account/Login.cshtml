@model BookNook.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page wrapper ------------------------------------------------------------>
<section class="relative isolate min-h-[calc(100vh-200px)] flex items-center justify-center px-4">
  

    <!-- Login card -->
    <div class="w-full max-w-md bg-white/90 backdrop-blur-md border border-slate-200 rounded-2xl shadow-lg p-8">
        <h1 class="text-3xl font-merriweather text-[#4b2e83] text-center mb-6 drop-shadow-sm">
            Welcome Back
        </h1>

        <form asp-action="Login" method="post" class="space-y-5">

            <!-- Email ------------------------------------------------------->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-slate-700 mb-1"></label>
                <input asp-for="Email"
                       type="email"
                       class="w-full rounded-lg border border-slate-300 p-3 placeholder-slate-400 focus:ring-2 focus:ring-[#fbbf24] focus:border-[#fbbf24] outline-none"
                       placeholder="you@example.com">
                <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
            </div>

            <!-- Password ---------------------------------------------------->
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-slate-700 mb-1"></label>
                <input asp-for="Password"
                       type="password"
                       class="w-full rounded-lg border border-slate-300 p-3 placeholder-slate-400 focus:ring-2 focus:ring-[#fbbf24] focus:border-[#fbbf24] outline-none"
                       placeholder="••••••••">
                <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
            </div>

            <!-- Remember me ------------------------------------------------->
            <div class="flex items-center">
                <input asp-for="RememberMe"
                       class="h-4 w-4 text-[#4b2e83] focus:ring-[#4b2e83] border-slate-300 rounded">
                <label asp-for="RememberMe" class="ml-2 text-sm text-slate-700 select-none"></label>
            </div>

            <!-- Submit ------------------------------------------------------>
            <button type="submit"
                    class="w-full bg-[#4b2e83] hover:bg-[#3c226a] text-white font-semibold py-3 rounded-lg transition">
                Sign In
            </button>

            <!-- Links ------------------------------------------------------->
         
            <div class="text-center text-sm">
                <span class="text-slate-600">New here?</span>
                <a asp-action="Register"
                   asp-controller="Account"
                   class="text-[#4b2e83] font-medium hover:underline">
                    Create an account
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
