@model BookNook.Models.CreateStaffViewModel
@{
    ViewData["Title"] = "Create Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Wrapper -------------------------------------------------------------->
<div class="max-w-4xl mx-auto px-4 py-12">

    <h1 class="text-2xl font-merriweather text-[#4b2e83] text-center mb-8">
        Create Staff Account
    </h1>

    <!-- Card -->
    <div class="bg-white/90 backdrop-blur border border-slate-200 rounded-2xl shadow-lg p-8 max-w-lg mx-auto">

        <form asp-action="CreateStaff" method="post" class="space-y-6">

            <div asp-validation-summary="All" class="text-rose-600 text-sm text-center"></div>

            <!-- First name -->
            <div>
                <label asp-for="FirstName" class="block text-sm font-medium text-slate-700 mb-1"></label>
                <input asp-for="FirstName"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24]" />
                <span asp-validation-for="FirstName" class="text-rose-600 text-xs"></span>
            </div>

            <!-- Last name -->
            <div>
                <label asp-for="LastName" class="block text-sm font-medium text-slate-700 mb-1"></label>
                <input asp-for="LastName"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24]" />
                <span asp-validation-for="LastName" class="text-rose-600 text-xs"></span>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-slate-700 mb-1"></label>
                <input asp-for="Email"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24]" />
                <span asp-validation-for="Email" class="text-rose-600 text-xs"></span>
            </div>

            <!-- Temporary password -->
            <div>
                <label asp-for="TemporaryPassword" class="block text-sm font-medium text-slate-700 mb-1"></label>
                <input asp-for="TemporaryPassword"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24]" />
                <span asp-validation-for="TemporaryPassword" class="text-rose-600 text-xs"></span>
            </div>

            <!-- Buttons -->
            <div class="flex justify-end">
                <button type="submit"
                        class="bg-[#4b2e83] hover:bg-[#3c226a] text-white text-sm font-semibold py-2 px-6 rounded-lg shadow">
                    Create Staff
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
