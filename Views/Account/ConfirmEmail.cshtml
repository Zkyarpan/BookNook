@{
    ViewData["Title"] = "Email Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100 px-4">
    <div class="bg-white rounded-2xl shadow-lg p-8 max-w-sm w-full text-center animate-fadeIn">
        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-16 w-16 text-green-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 12l2 2l4 -4m0 0a9 9 0 11-18 0a9 9 0 0118 0z" />
        </svg>

        <h2 class="text-3xl font-extrabold text-[#4b2e83] mb-2">Email Confirmed!</h2>
        <p class="text-gray-600 mb-6">
            Your email has been successfully verified.<br>
            You may now log in to your account.
        </p>

        <a asp-controller="Account" asp-action="Login"
           class="inline-block px-6 py-2 bg-[#4b2e83] hover:bg-[#3c226a] text-white font-semibold rounded-lg
              focus:outline-none focus:ring-2 focus:ring-[#fbbf24] focus:ring-offset-2 transition">
            Go to Login
        </a>
    </div>
</div>


