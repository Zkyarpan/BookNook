@{
    ViewData["Title"] = "Email Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Wrapper -------------------------------------------------------------->
<div class="flex items-center justify-center min-h-[calc(100vh-200px)] bg-gradient-to-br from-[#4b2e83]/10 via-[#fbbf24]/10 to-white px-4">

    <!-- Card -------------------------------------------------------------->
    <div class="bg-white/90 backdrop-blur border border-slate-200 rounded-2xl shadow-lg p-8 max-w-md w-full text-center">

        <h2 class="text-2xl font-merriweather text-[#4b2e83] mb-4">Email Confirmed</h2>

        <p class="text-slate-700 mb-6">
            Your email has been successfully confirmed.<br>
            You can now log in to your account.
        </p>

        <a href="/Account/Login"
           class="inline-block bg-[#4b2e83] hover:bg-[#3c226a] text-white text-sm font-semibold py-2 px-6 rounded-lg shadow">
            Go to Login
        </a>

    </div>
</div>
