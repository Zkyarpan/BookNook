@model BookHive.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page wrapper ------------------------------------------------------------>
<section class="relative isolate min-h-[calc(100vh-200px)] flex items-center justify-center px-4">

    <!-- Registration card -->
    <div class="w-full max-w-xl bg-white/90 backdrop-blur-md border border-slate-200 rounded-2xl shadow-lg p-8">
        <h1 class="text-3xl font-merriweather text-[#4b2e83] text-center mb-6 drop-shadow-sm">
            Create Your Account
        </h1>

        <form asp-action="Register" method="post" class="space-y-6">

            <!-- === Row 1: First + Last names ================================= -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="FirstName"
                           class="w-full rounded-lg border border-slate-300 p-3 placeholder-slate-400 focus:ring-2 focus:ring-[#fbbf24] focus:border-[#fbbf24] outline-none"
                           placeholder="First name">
                    <span asp-validation-for="FirstName" class="text-red-600 text-xs"></span>
                </div>

                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="LastName"
                           class="w-full rounded-lg border border-slate-300 p-3 placeholder-slate-400 focus:ring-2 focus:ring-[#fbbf24] focus:border-[#fbbf24] outline-none"
                           placeholder="Last name">
                    <span asp-validation-for="LastName" class="text-red-600 text-xs"></span>
                </div>
            </div>

            <!-- === Row 2: Email + Password ================================== -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="Email"
                           type="email"
                           class="w-full rounded-lg border border-slate-300 p-3 placeholder-slate-400 focus:ring-2 focus:ring-[#fbbf24] focus:border-[#fbbf24] outline-none"
                           placeholder="you@example.com">
                    <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
                </div>

                <div class="relative">
                    <label asp-for="Password" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="Password"
                           type="password"
                           class="w-full rounded-lg border border-slate-300 p-3 pr-12 placeholder-slate-400 focus:ring-2 focus:ring-[#fbbf24] focus:border-[#fbbf24] outline-none"
                           placeholder="••••••••"
                           id="password">
                    <!-- eye icon - positioned to the right -->
                    <button type="button"
                            class="absolute top-1/2 right-3 transform -translate-y-1/2 text-slate-500 hover:text-slate-700"
                            aria-label="Toggle password visibility"
                            data-target="password">
                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M2.458 12C3.732 7.943 7.522 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.478 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                    <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
                </div>
            </div>

            <!-- === Row 3: Confirm password (full width) ===================== -->
            <div class="relative">
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-slate-700 mb-1"></label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       class="w-full rounded-lg border border-slate-300 p-3 pr-12 placeholder-slate-400 focus:ring-2 focus:ring-[#fbbf24] focus:border-[#fbbf24] outline-none"
                       placeholder="Re‑enter password"
                       id="confirmPassword">
                <!-- eye icon - positioned to the right -->
                <button type="button"
                        class="absolute top-1/2 right-3 transform -translate-y-1/2 text-slate-500 hover:text-slate-700"
                        aria-label="Toggle password visibility"
                        data-target="confirmPassword">
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M2.458 12C3.732 7.943 7.522 5 12 5c4.477 0 8.268-2.943 9.542-7a9.971 9.971 0 01-4.293 5.568M3 3l18 18" />
                    </svg>
                </button>
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-xs"></span>
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="w-full bg-[#4b2e83] hover:bg-[#3c226a] text-white font-semibold py-3 rounded-lg transition">
                Sign Up
            </button>

            <!-- Link to login -->
            <div class="text-center text-sm">
                <span class="text-slate-600">Already a member?</span>
                <a asp-action="Login"
                   asp-controller="Account"
                   class="text-[#4b2e83] font-medium hover:underline">
                    Log in here
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle password visibility for any button with data-target attr
        document.querySelectorAll('button[data-target]').forEach(btn => {
            btn.addEventListener('click', () => {
                const input = document.getElementById(btn.getAttribute('data-target'));
                if (!input) return;

                const hidden = input.type === 'password';
                input.type = hidden ? 'text' : 'password';

                // swap icon
                btn.innerHTML = hidden
                    ? `<svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                 d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.966 9.966 0 012.311-4.415m2.739-2.739A9.966 9.966 0 0112 5c4.478 0 8.268 2.943 9.542 7a9.971 9.971 0 01-4.293 5.568M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                 d="M3 3l18 18" />
                       </svg>`
                    : `<svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                 d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                 d="M2.458 12C3.732 7.943 7.522 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.478 0-8.268-2.943-9.542-7z" />
                       </svg>`;
            });
        });
    </script>
}