@model BookHive.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex items-center justify-center min-h-[calc(100vh-200px)]">
    <div class="bg-amber-50 rounded-lg shadow-lg p-8 max-w-md w-full">
        <h2 class="text-2xl font-bold text-amber-900 mb-6 text-center">Register for BookHive</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-red-600 mb-4 text-center"></div>

            <div class="form-group mb-4">
                <label asp-for="FirstName" class="block text-gray-700 mb-2"></label>
                <input asp-for="FirstName" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your first name" />
                <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="LastName" class="block text-gray-700 mb-2"></label>
                <input asp-for="LastName" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your last name" />
                <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="block text-gray-700 mb-2"></label>
                <input asp-for="Email" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="block text-gray-700 mb-2"></label>
                <input asp-for="Password" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="block text-gray-700 mb-2"></label>
                <input asp-for="ConfirmPassword" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-amber-600 text-white font-semibold py-3 rounded-lg hover:bg-amber-700 transition duration-300">Register</button>

            <div class="mt-4 text-center">
                <a href="/Account/Login" class="text-amber-600 hover:underline">Already have an account? Login here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}