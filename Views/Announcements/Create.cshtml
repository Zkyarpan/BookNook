@model BookHive.Models.TimedAnnouncement
@{
    ViewData["Title"] = "Create Announcement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-12">

    <h1 class="text-2xl font-merriweather text-[#4b2e83] text-center mb-8">
        Create Announcement
    </h1>

    <!-- flash messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-emerald-100 text-emerald-700 py-2 px-4 rounded mb-6 text-center text-sm shadow">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-rose-100 text-rose-700 py-2 px-4 rounded mb-6 text-center text-sm shadow">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- form card -->
    <div class="bg-white/90 backdrop-blur border border-slate-200 rounded-2xl shadow-lg p-8 max-w-lg mx-auto">

        <form asp-action="Create" method="post" class="space-y-6">

            <!-- Title -->
            <div>
                <label asp-for="Title" class="block text-sm font-medium text-slate-700 mb-1">Title</label>
                <input asp-for="Title"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24] text-sm" />
                <span asp-validation-for="Title" class="text-rose-600 text-xs"></span>
            </div>

            <!-- Message -->
            <div>
                <label asp-for="Message" class="block text-sm font-medium text-slate-700 mb-1">Message</label>
                <textarea asp-for="Message" rows="5"
                          class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24] text-sm"></textarea>
                <span asp-validation-for="Message" class="text-rose-600 text-xs"></span>
            </div>

            <!-- Start -->
            <div>
                <label asp-for="StartDate" class="block text-sm font-medium text-slate-700 mb-1">Start Date (UTC)</label>
                <input asp-for="StartDate" type="datetime-local"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24] text-sm" />
                <span asp-validation-for="StartDate" class="text-rose-600 text-xs"></span>
            </div>

            <!-- Expires -->
            <div>
                <label asp-for="ExpiresAt" class="block text-sm font-medium text-slate-700 mb-1">Expires At (UTC)</label>
                <input asp-for="ExpiresAt" type="datetime-local"
                       class="w-full p-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24] text-sm" />
                <span asp-validation-for="ExpiresAt" class="text-rose-600 text-xs"></span>
            </div>

            <!-- buttons -->
            <div class="text-center space-x-2">
                <button type="submit"
                        class="bg-[#4b2e83] hover:bg-[#3c226a] text-white text-sm font-medium py-2 px-6 rounded-lg shadow">
                    Create
                </button>
                <a asp-action="Index"
                   class="bg-slate-500 hover:bg-slate-600 text-white text-sm font-medium py-2 px-6 rounded-lg shadow">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
