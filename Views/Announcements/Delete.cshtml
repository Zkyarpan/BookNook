@model BookNook.Models.TimedAnnouncement
@{
    ViewData["Title"] = "Delete Announcement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bg-gradient-to-br from-[#4b2e83]/10 via-[#fbbf24]/10 to-white py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-merriweather text-[#4b2e83] text-center mb-8">
            Delete Announcement
        </h1>

        <div class="bg-white/90 backdrop-blur-lg border border-gray-200 rounded-2xl shadow-lg p-8">
            <h2 class="text-lg font-semibold text-[#4b2e83] mb-4">
                Are you sure you want to delete this announcement?
            </h2>

            <dl class="space-y-3 text-sm text-gray-700 mb-8">
                <div>
                    <dt class="font-medium">Title</dt>
                    <dd>@Model.Title</dd>
                </div>
                <div>
                    <dt class="font-medium">Message</dt>
                    <dd>@Model.Message</dd>
                </div>
                <div>
                    <dt class="font-medium">Created</dt>
                    <dd>@Model.CreatedAt.ToString("d MMM yyyy HH:mm")</dd>
                </div>
                <div>
                    <dt class="font-medium">Starts</dt>
                    <dd>@Model.StartDate.ToString("d MMM yyyy HH:mm")</dd>
                </div>
                <div>
                    <dt class="font-medium">Expires</dt>
                    <dd>@Model.ExpiresAt.ToString("d MMM yyyy HH:mm")</dd>
                </div>
            </dl>

            <form asp-action="Delete" method="post" class="flex flex-col sm:flex-row justify-center gap-4">
                <input type="hidden" asp-for="Id" />

                <button type="submit"
                        class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded-full shadow transition">
                    Delete
                </button>

                <a asp-action="Index"
                   class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-6 rounded-full shadow transition">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</section>
