@model BookHive.Models.TimedAnnouncement
@{
    ViewData["Title"] = "Delete Announcement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-12">

    <h1 class="text-2xl font-merriweather text-[#4b2e83] text-center mb-8">
        Delete Announcement
    </h1>

    <!-- card -------------------------------------------------------------->
    <div class="bg-white/90 backdrop-blur border border-slate-200 rounded-2xl shadow-lg p-8 max-w-lg mx-auto">

        <h2 class="text-lg font-semibold text-[#4b2e83] mb-4">
            Are you sure you want to delete this announcement?
        </h2>

        <div class="text-sm text-slate-700 space-y-1 mb-6">
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Message:</strong> @Model.Message</p>
            <p><strong>Created:</strong> @Model.CreatedAt:d MMM yyyy HH:mm</p>
            <p><strong>Starts:</strong> @Model.StartDate:d MMM yyyy HH:mm</p>
            <p><strong>Expires:</strong> @Model.ExpiresAt:d MMM yyyy HH:mm</p>
        </div>

        <form asp-action="Delete" method="post" class="text-center space-x-2">
            <input type="hidden" asp-for="Id" />

            <button type="submit"
                    class="bg-red-600 hover:bg-red-700 text-white text-sm font-medium py-2 px-6 rounded-lg shadow">
                Delete
            </button>

            <a asp-action="Index"
               class="bg-slate-500 hover:bg-slate-600 text-white text-sm font-medium py-2 px-6 rounded-lg shadow">
                Cancel
            </a>
        </form>
    </div>
</div>
