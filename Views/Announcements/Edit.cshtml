@model BookNook.Models.TimedAnnouncement
@{
    ViewData["Title"] = "Edit Announcement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bg-gradient-to-br from-[#4b2e83]/10 via-[#fbbf24]/10 to-white py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-merriweather text-[#4b2e83] text-center mb-8">
            Edit Announcement
        </h1>

        @* Flash messages *@
        @if (TempData["SuccessMessage"] is string success)
        {
            <div class="bg-green-100 text-green-800 p-3 rounded-lg mb-6 text-center font-medium">
                @success
            </div>
        }
        @if (TempData["ErrorMessage"] is string error)
        {
            <div class="bg-red-100 text-red-800 p-3 rounded-lg mb-6 text-center font-medium">
                @error
            </div>
        }

        <div class="bg-white/90 backdrop-blur-lg border border-gray-200 rounded-2xl shadow-lg p-8">
            <form asp-action="Edit" method="post" class="space-y-6">
                <input type="hidden" asp-for="Id" />

                <div>
                    <label asp-for="Title" class="block text-sm font-medium text-slate-700 mb-1">Title</label>
                    <input asp-for="Title"
                           class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24] text-sm" />
                    <span asp-validation-for="Title" class="text-rose-600 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Message" class="block text-sm font-medium text-slate-700 mb-1">Message</label>
                    <textarea asp-for="Message" rows="5"
                              class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24] text-sm"></textarea>
                    <span asp-validation-for="Message" class="text-rose-600 text-xs"></span>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="StartDate" class="block text-sm font-medium text-slate-700 mb-1">Start Date (UTC)</label>
                        <input asp-for="StartDate" type="datetime-local"
                               class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24] text-sm" />
                        <span asp-validation-for="StartDate" class="text-rose-600 text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="ExpiresAt" class="block text-sm font-medium text-slate-700 mb-1">Expires At (UTC)</label>
                        <input asp-for="ExpiresAt" type="datetime-local"
                               class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#fbbf24] text-sm" />
                        <span asp-validation-for="ExpiresAt" class="text-rose-600 text-xs"></span>
                    </div>
                </div>

                <div class="text-center flex flex-col sm:flex-row justify-center gap-4">
                    <button type="submit"
                            class="flex-1 bg-[#fbbf24] hover:bg-[#f8d267] text-[#4b2e83] font-semibold py-2 px-6 rounded-full shadow transition">
                        Save Changes
                    </button>
                    <a asp-action="Index"
                       class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-6 rounded-full shadow transition">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
